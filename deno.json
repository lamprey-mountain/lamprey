{
  "workspace": ["frontend", "backend"],
	"compilerOptions": {
		"strict": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable", "deno.ns", "webworker"],
		"jsx": "react-jsx",
		"jsxImportSource": "solid-js"
	},
	"fmt": {
		"useTabs": true
	},
	"lock": {
		"path": "./deno.lock",
  	// frozen lockfile has too many issues for now?
		"frozen": false
	},
	"imports": {
		"nanoid": "npm:nanoid@^5.0.9",
		"uuidv7": "npm:uuidv7@^1.0.2",
	},
}
